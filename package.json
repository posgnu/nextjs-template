{
  "name": "nextjs-template",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "next lint --fix && prettier '**/*.{json,yaml,ts,tsx}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "ci": "pnpm lint && pnpm check-types && pnpm build",
    "ci-pipeline": "echo '🔍 Running CI Pipeline...' && pnpm lint && pnpm check-types && pnpm build && echo '✅ CI Pipeline passed!'",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "npm": "Please use pnpm",
    "yarn": "Please use pnpm"
  },
  "packageManager": "pnpm@10.2.0",
  "dependencies": {
    "@heroui/react": "^2.7.5",
    "@tanstack/react-query": "^5.64.1",
    "@tanstack/react-query-devtools": "^5.64.1",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.0",
    "framer-motion": "^12.5.0",
    "next": "^14",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.5.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@heroui/theme": "^2.4.20",
    "@svgr/webpack": "^8.1.0",
    "@tanstack/eslint-plugin-query": "^5.65.0",
    "@types/node": "^24",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^8",
    "eslint-config-next": "^14",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}